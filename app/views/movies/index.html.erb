<h2>All Movies</h2>

<%#  Part 1: Start here... %>

<%= form_tag movies_path, method: :get, id: 'ratings_form', local: true do %>
  Include:
  <% @all_ratings.each do |rating| %>
    <div class="form-check  form-check-inline">
      <%= check_box_tag "ratings[#{rating}]", "1", @ratings_to_show.include?(rating), class: 'form-check-input', id: "ratings_#{rating}" %>
      <%= label_tag "ratings[#{rating}]", rating, class: 'form-check-label' %>
    </div>
  <% end %>
  <div>
    <label class="form-label me-2" for="sort_by">Sort by:</label>
    <%= select_tag :sort_by,
                   options_for_select([["Title", "title"],
                                       ["Release date", "release_date"]],
                                       @sort_by),
                   id:    "sort_by",
                   class: "form-select d-inline w-auto" %>
  </div>
  <%= submit_tag 'Refresh', id: 'ratings_submit', class: 'btn btn-primary' %>
  
<% end %>

<div class="row">
  <div class="col-12">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <div>
        <%= link_to "Movie Title", movies_path(sort_by: "title", ratings: Hash[@ratings_to_show.map {|rating| [rating, "1"]}]), id: "title_header", class: "btn btn-outline-secondary me-2" %>
        <%= link_to "Release Date", movies_path(sort_by: "release_date", ratings: Hash[@ratings_to_show.map {|rating| [rating, "1"]}]), id: "release_date_header", class: "btn btn-outline-secondary" %>
      </div>
    </div>
  </div>
</div>

<div id="movies">
  <% @movies.each do |movie| %>
    <div class="card mb-3">
      <div class="card-body">
        <div class="row">
          <div class="col-md-3">
            <strong><%= movie.title %></strong>
          </div>
          <div class="col-md-2">
            <span class="badge bg-secondary"><%= movie.rating %></span>
          </div>
          <div class="col-md-3">
            <%= movie.release_date %>
          </div>
          <div class="col-md-4">
            <%= link_to "More about #{movie.title}", movie_path(movie), class: "btn btn-sm btn-primary" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
<%= link_to 'Add new movie', new_movie_path, :class => 'btn btn-primary' %>
